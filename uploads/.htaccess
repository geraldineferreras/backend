# Allow iframe embedding for file previews
<IfModule mod_headers.c>
    # Allow iframe embedding from any origin for development
    Header always set X-Frame-Options "ALLOWALL"
    
    # Set CORS headers for cross-origin requests
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Set proper content type for PDFs
    <FilesMatch "\.(pdf)$">
        Header always set Content-Type "application/pdf"
        Header always set Content-Disposition "inline"
    </FilesMatch>
    
    # Set proper content type for images
    <FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
        Header always set Content-Disposition "inline"
    </FilesMatch>
    
    # Cache control for better performance
    Header always set Cache-Control "public, max-age=3600"
</IfModule>

# Handle OPTIONS requests for CORS preflight
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]
